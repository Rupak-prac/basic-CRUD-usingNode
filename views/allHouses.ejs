<%- include('partials/header') %>
<%- include('partials/navbar') %>
  

<h1>All Houses available</h1>
<div class="d-flex justify-content-left">

  <% for( let eItem of allData ) { %>
    <div class="card shadow m-1" style="width: 18rem;">
        <img src="<%= eItem.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= eItem.location %></h5>
          <p class="card-text"><%= eItem.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Price - <%= eItem.price %></li>
          <li class="list-group-item">type - <%= eItem.houseType %></li>
          <li class="list-group-item">Size - <%= eItem.size %> m2</li>
          <li class="list-group-item">Rooms - <%= eItem.rooms %></li>
        </ul>
        <div class="card-body">
          <a href="/houses/<%= eItem._id %>" class="card-link btn btn-info">Explore</a>
        </div>
    </div>
  <% } %>
</div>
<%- include('partials/footer') %>

